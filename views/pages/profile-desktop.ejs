    $('#mySkillsModalTwo').removeClass("fade");
    $('#mySkillsModalTwo').modal("show");
    $('#mySkillsModal').modal("hide");
  });
  
  
  function loadFinishCheck(i){
    $('.finishCircle').addClass(`p${i}`)
    i++
    if(i<101){
      setTimeout(()=>{loadFinishCheck(i)}, 6);
    }
  }
  
  $(document).ready(()=>{
    $('#mySkillsModalTwo').modal("show");
  })
  $('.skillButton').click((e)=>{
    $(e.target).toggleClass("activeSkill");
  })
  
  $('.addSkillButton').click(()=>{
    var thisSkill = $('.skillInputBar').val();
    if(thisSkill !== '' && $('.deleteSkill').length < 10){
      $('.skillsList').append(`<p><i class="fa fa-minus-circle deleteSkill" aria-hidden="true"></i>&nbsp&nbsp${thisSkill}</p>`);
      $('.skillInputBar').val('');
      $('.skillInputBar').attr("placeholder", "Add Your Skill Here");
