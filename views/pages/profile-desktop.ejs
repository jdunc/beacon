    $('.yesRectangle').css("background-color", "#2E1AA8")
    $('.noRectangle').css("background-color", "rgba(0,0,0,0)")
  });
  $('.noRectangle').click(()=>{
    $('.noRectangle').css("color", "white");
    $('.yesRectangle').css("color", "#2E1AA8");
    $('.noRectangle').css("background-color", "#2E1AA8")
    $('.yesRectangle').css("background-color", "rgba(0,0,0,0)")
