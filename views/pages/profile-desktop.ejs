  $('.basicInfoOneNext').click(()=>{
    $('#basicInfoModalPartTwo').removeClass("fade");
    $('#basicInfoModalPartTwo').modal("show");
    $('#basicInfoModalPartOne').modal("hide");
  });
  $('.basicInfoTwoBack').click(()=>{
    $('#basicInfoModalPartOne').removeClass("fade");
    $('#basicInfoModalPartOne').modal("show");
    $('#basicInfoModalPartTwo').modal("hide");
